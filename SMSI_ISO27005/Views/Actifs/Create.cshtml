@model SMSI_ISO27005.Models.actif

@{
    ViewBag.Title = "Creat";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h2>Creer Un Actif</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nom_actif,"Actif", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nom_actif, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nom" } })
                @Html.ValidationMessageFor(model => model.nom_actif, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.descr_actif,"Description Actif" ,htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.descr_actif, new { @class = "form-control", @placeholder = "Discription" })
                @Html.ValidationMessageFor(model => model.descr_actif, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.categ_actif, "Categorie", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.categ_actif, new { htmlAttributes = new { @class = "form-control", @placeholder = "Categorie" } })
                @Html.ValidationMessageFor(model => model.categ_actif, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
